                  <Label fx:id="loginFeedbackLabel" layoutX="195.0" layoutY="338.0" prefHeight="20.0" prefWidth="200.0" textFill="RED" />
               </children>
            </AnchorPane>
         </children>
      </HBox>
      <HBox alignment="BOTTOM_CENTER" prefHeight="10.0" prefWidth="600.0" />
   </children>
