            <AnchorPane>
               <children>
                  <Label layoutX="14.0" text="Welcome to MyPass" textOverrun="CLIP" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="0.0">
                     <font>
                        <Font name="Arial Bold" size="40.0" />
                     </font>
                  </Label>
                  <TextField fx:id="emailField" layoutX="200.0" layoutY="202.0" prefHeight="25.0" prefWidth="200.0" AnchorPane.bottomAnchor="75.0" AnchorPane.leftAnchor="195.0" AnchorPane.rightAnchor="195.0" />
