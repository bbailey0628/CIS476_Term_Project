                  <Label layoutX="120.0" layoutY="199.0" text="Email: " AnchorPane.bottomAnchor="75.0">
                     <font>
                        <Font name="Arial" size="24.0" />
                     </font>
                  </Label>
                  <Label layoutX="76.0" layoutY="239.0" text="Password: " AnchorPane.bottomAnchor="35.0">
                     <font>
                        <Font name="Arial" size="24.0" />
                     </font>
                  </Label>
                  <Button fx:id="loginButton" layoutX="194.0" layoutY="274.0" mnemonicParsing="false" onAction="#LoginButtonClicked" prefHeight="25.0" prefWidth="100.0" text="Login" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="190.0" />
