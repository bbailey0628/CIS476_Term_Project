<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="12.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cis476termproject.CredentialsController">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <children>
        <Label text="Credentials" textAlignment="CENTER">
            <font>
                <Font name="Arial Bold" size="28.0"/>
            </font>
        </Label>

        <TableView fx:id="credentialsTable" prefHeight="220.0" prefWidth="640.0">
            <columns>
                <TableColumn fx:id="urlColumn" prefWidth="160.0" text="URL"/>
                <TableColumn fx:id="usernameColumn" prefWidth="160.0" text="Username"/>
                <TableColumn fx:id="passwordColumn" prefWidth="160.0" text="Password"/>
                <TableColumn fx:id="actionsColumn" prefWidth="160.0" text="Actions"/>
            </columns>
        </TableView>

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120.0"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0"/>
                <RowConstraints minHeight="30.0"/>
                <RowConstraints minHeight="30.0"/>
            </rowConstraints>
            <children>
                <Label text="URL:" GridPane.rowIndex="0"/>
                <TextField fx:id="urlField" promptText="https://example.com" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Username:" GridPane.rowIndex="1"/>
                <TextField fx:id="usernameField" promptText="user@example.com" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Password:" GridPane.rowIndex="2"/>
                <PasswordField fx:id="passwordField" promptText="Required" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </children>
        </GridPane>

        <HBox spacing="10.0" alignment="CENTER">
            <children>
                <Button text="Add" onAction="#addCredential"/>
                <Button text="Update" onAction="#updateCredential"/>
                <Button text="Delete" onAction="#deleteCredential"/>
                <Button text="Clear Selection" onAction="#clearSelection"/>
                <Button text="Back" fx:id="backButton" onAction="#BackButtonClicked"/>
            </children>
        </HBox>
    </children>
</VBox>
