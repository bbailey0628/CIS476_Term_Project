<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cis476termproject.CredentialsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Credentials" textAlignment="CENTER">
            <font>
                <Font name="Arial Bold" size="32.0" />
            </font>
        </Label>
        <GridPane hgap="10.0" vgap="12.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120.0" percentWidth="30.0" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                <ColumnConstraints halignment="LEFT" minWidth="120.0" percentWidth="20.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="30.0" />
            </rowConstraints>
            <children>
                <Label text="URL:" GridPane.rowIndex="0" />
                <Label fx:id="urlValueLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Button mnemonicParsing="false" onAction="#CopyUrlClicked" text="Copy URL" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                <Label text="Username:" GridPane.rowIndex="1" />
                <Label fx:id="usernameValueLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button mnemonicParsing="false" onAction="#CopyUsernameClicked" text="Copy Username" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                <Label text="Password:" GridPane.rowIndex="2" />
                <Label fx:id="passwordValueLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button mnemonicParsing="false" onAction="#CopyPasswordClicked" text="Copy Password" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            </children>
        </GridPane>
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#BackButtonClicked" prefWidth="100.0" text="Back" />
        </HBox>
        <HBox alignment="TOP_CENTER" prefHeight="10.0" prefWidth="600.0" />
        <Label alignment="CENTER" text="Credentials" textAlignment="CENTER" textOverrun="CLIP">
            <font>
                <Font name="Arial Bold" size="40.0" />
            </font>
        </Label>
        <AnchorPane>
            <children>
                <TableView fx:id="credentialsTable" prefHeight="200.0" prefWidth="600.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="urlColumn" prefWidth="150.0" text="URL" />
                        <TableColumn fx:id="usernameColumn" prefWidth="175.0" text="Username" />
                        <TableColumn fx:id="passwordColumn" prefWidth="175.0" text="Password" />
                        <TableColumn fx:id="actionsColumn" prefWidth="100.0" text="Actions" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <children>
                        <Label alignment="CENTER" layoutX="14.0" text="Credentials" textAlignment="CENTER" textOverrun="CLIP" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="0.0">
                            <font>
                                <Font name="Arial Bold" size="40.0" />
                            </font>
                        </Label>
                        <GridPane hgap="10.0" layoutX="40.0" layoutY="80.0" vgap="10.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="80.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" percentWidth="30.0" />
                                <ColumnConstraints percentWidth="40.0" />
                                <ColumnConstraints halignment="CENTER" percentWidth="30.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" />
                            </rowConstraints>
                            <children>
                                <Label text="URL:" />
                                <Label fx:id="urlLabel" GridPane.columnIndex="1" />

                                <Label text="Username:" GridPane.rowIndex="1" />
                                <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <ToggleButton fx:id="usernameToggle" mnemonicParsing="false" onAction="#toggleUsername" text="Show" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                                <Label text="Password:" GridPane.rowIndex="2" />
                                <Label fx:id="passwordLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <ToggleButton fx:id="passwordToggle" mnemonicParsing="false" onAction="#togglePassword" text="Show" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                            </children>
                        </GridPane>
                        <Button fx:id="backButton" contentDisplay="CENTER" layoutX="178.0" layoutY="274.0" mnemonicParsing="false" onAction="#BackButtonClicked" prefHeight="25.0" prefWidth="100.0" text="Back" textAlignment="CENTER" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="178.0" />
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#BackButtonClicked" prefHeight="25.0" prefWidth="100.0" text="Back" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>
        <HBox alignment="BOTTOM_CENTER" prefHeight="10.0" prefWidth="600.0" />
    </children>
</VBox>
