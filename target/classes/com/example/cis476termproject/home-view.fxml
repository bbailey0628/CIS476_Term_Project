    </padding>
   <children>
      <Label alignment="CENTER" text="Home" textAlignment="CENTER" textOverrun="CLIP">
         <font>
            <Font name="Arial Bold" size="40.0" />
         </font>
      </Label>
      <Separator />
      <HBox alignment="CENTER" prefHeight="300.0" prefWidth="600.0">
         <children>
            <AnchorPane prefHeight="300.0" prefWidth="650.0">
               <children>
                  <Button fx:id="logoutButton" layoutX="275.0" layoutY="261.0" mnemonicParsing="false" onAction="#LogoutButtonClicked" prefHeight="25.0" prefWidth="100.0" text="Logout" AnchorPane.bottomAnchor="14.0" />
                  <Button fx:id="CredentialsButton" layoutX="25.0" layoutY="85.0" mnemonicParsing="false" onAction="#CredentialsButtonClicked" prefHeight="25.0" prefWidth="100.0" text="Credentials" AnchorPane.leftAnchor="100.0" />
