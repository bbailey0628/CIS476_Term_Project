                  <Button fx:id="SecureNoteButton" layoutX="226.0" layoutY="164.0" mnemonicParsing="false" onAction="#SecureNoteButtonClicked" prefHeight="25.0" prefWidth="100.0" text="Secure Notes" AnchorPane.rightAnchor="100.0" />
               </children>
            </AnchorPane>
         </children>
      </HBox>
   </children>
</VBox>
