<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="12.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cis476termproject.PersonalInfoController">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <children>
        <Label text="Personal Info" textAlignment="CENTER">
            <font>
                <Font name="Arial Bold" size="28.0"/>
            </font>
        </Label>

        <TableView fx:id="personalInfoTable" prefHeight="220.0" prefWidth="640.0">
            <columns>
                <TableColumn fx:id="licenseColumn" prefWidth="180.0" text="License"/>
                <TableColumn fx:id="ssnColumn" prefWidth="160.0" text="SSN"/>
                <TableColumn fx:id="passportColumn" prefWidth="160.0" text="Passport"/>
                <TableColumn fx:id="actionsColumn" prefWidth="140.0" text="Actions"/>
            </columns>
        </TableView>

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120.0"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0"/>
                <RowConstraints minHeight="30.0"/>
                <RowConstraints minHeight="30.0"/>
            </rowConstraints>
            <children>
                <Label text="License:" GridPane.rowIndex="0"/>
                <TextField fx:id="licenseField" promptText="D1234567" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="SSN:" GridPane.rowIndex="1"/>
                <TextField fx:id="ssnField" promptText="111-22-3333" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Passport:" GridPane.rowIndex="2"/>
                <TextField fx:id="passportField" promptText="P12345678" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </children>
        </GridPane>

        <HBox spacing="10.0" alignment="CENTER">
            <children>
                <Button text="Add" onAction="#addPersonalInfo"/>
                <Button text="Update" onAction="#updatePersonalInfo"/>
                <Button text="Delete" onAction="#deletePersonalInfo"/>
                <Button text="Clear Selection" onAction="#clearSelection"/>
                <Button text="Back" fx:id="backButton" onAction="#BackButtonClicked"/>
            </children>
        </HBox>
    </children>
</VBox>
