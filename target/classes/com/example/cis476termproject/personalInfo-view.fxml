<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cis476termproject.PersonalInfoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="TOP_CENTER" prefHeight="10.0" prefWidth="600.0" />
        <Label alignment="CENTER" text="Personal Info" textAlignment="CENTER" textOverrun="CLIP">
            <font>
                <Font name="Arial Bold" size="40.0" />
            </font>
        </Label>
        <AnchorPane>
            <children>
                <TableView fx:id="personalInfoTable" prefHeight="200.0" prefWidth="600.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="licenseColumn" prefWidth="200.0" text="License" />
                        <TableColumn fx:id="ssnColumn" prefWidth="150.0" text="SSN" />
                        <TableColumn fx:id="passportColumn" prefWidth="150.0" text="Passport" />
                        <TableColumn fx:id="actionsColumn" prefWidth="100.0" text="Actions" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <children>
                        <Label alignment="CENTER" layoutX="14.0" text="Personal Info" textAlignment="CENTER" textOverrun="CLIP" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="0.0">
                            <font>
                                <Font name="Arial Bold" size="40.0" />
                            </font>
                        </Label>
                        <GridPane hgap="10.0" layoutX="40.0" layoutY="80.0" vgap="10.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="80.0">
