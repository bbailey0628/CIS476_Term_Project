                                <ColumnConstraints halignment="RIGHT" percentWidth="30.0" />
                                <ColumnConstraints percentWidth="40.0" />
                                <ColumnConstraints halignment="CENTER" percentWidth="30.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" />
                            </rowConstraints>
                            <children>
                                <Label text="License #:" />
                                <Label fx:id="licenseLabel" GridPane.columnIndex="1" />
                                <ToggleButton fx:id="licenseToggle" mnemonicParsing="false" onAction="#toggleLicense" text="Show" GridPane.columnIndex="2" />

                                <Label text="SSN:" GridPane.rowIndex="1" />
                                <Label fx:id="ssnLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <ToggleButton fx:id="ssnToggle" mnemonicParsing="false" onAction="#toggleSsn" text="Show" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                                <Label text="Passport #:" GridPane.rowIndex="2" />
                                <Label fx:id="passportLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <ToggleButton fx:id="passportToggle" mnemonicParsing="false" onAction="#togglePassport" text="Show" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                            </children>
                        </GridPane>
                        <Button fx:id="backButton" contentDisplay="CENTER" layoutX="178.0" layoutY="274.0" mnemonicParsing="false" onAction="#BackButtonClicked" prefHeight="25.0" prefWidth="100.0" text="Back" textAlignment="CENTER" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="178.0" />
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#BackButtonClicked" prefHeight="25.0" prefWidth="100.0" text="Back" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>
        <HBox alignment="BOTTOM_CENTER" prefHeight="10.0" prefWidth="600.0" />
    </children>
